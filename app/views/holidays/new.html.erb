<% provide(:title, 'Add Holiday') %>
    <h1>Holiday Request for Employee</h1>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@holiday) do |f| %>
       <%= render 'shared/error_messages', object: f.object %> 

          <%= f.label :employee_id %><br />
          <%= f.collection_select(:employee_id, current_user.employees, :id, :name, {}, {:class => "foo"} ) %>
          <br>
          
          <%= f.label :start_date %>
          <%= f.text_field :start_date, :value=>Date.today.strftime('%m-%d-%Y'), :id =>"dp5" %>


          <%= f.label :finish_date %>
          <%= f.text_field :finish_date, :value=>Date.today.strftime('%m-%d-%Y'), :id =>"dp5" %>


          <%= f.submit "Create Holiday", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>