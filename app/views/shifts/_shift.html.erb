<tr>
    <td><%= shift.start_time %></td>
    <td><%= shift.finish_time %></td>
    <td><%= shift.total_hours %></td>
    <td><% if current_user?(shift.user) %>
          <%= link_to '<span style="color: #DC003B;" class="glyphicon glyphicon-remove" aria-hidden="true"></span> DELETE'.html_safe, shift, method: :delete,
                                           data: { confirm: "You sure?" } %>
        <% end %></td>
    <td><% if current_user?(shift.user) %>
      <%= link_to('<span style="color: #6501FF;" class="glyphicon glyphicon-pencil" aria-hidden="true"></span> EDIT'.html_safe, edit_shift_path(shift.id)) %>

        <% end %></td>
  </tr>
