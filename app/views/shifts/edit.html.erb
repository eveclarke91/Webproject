<% provide(:title, 'Edit Shift') %>
    <h1>Update Shift Details</h1>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@shift) do |f| %>
        
          <%= f.label :Start_Time %>
          <%= f.text_field :start_time %>

          <%= f.label :Finish_Time%>
          <%= f.text_field :finish_time %>

          <%= f.label :Total_Number_of_hours_worked %>
          <%= f.text_field :total_hours %>

         
          <%= f.submit "Save changes", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>