<% provide(:title, 'Edit Roster') %>
    <h1>Update Roster Details</h1>

    <div class="row">
      <script type="text/javascript">
        $(document).ready(function(){
          $('#date1').datepicker({
            format: "yyyy-mm-dd",
            startDate: "today",
            todayHighlight: true
          });
          });
        </script>
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@roster) do |f| %>
        <%= render 'shared/object_error_messages', object: f.object %> 
        

          <%= f.label :Begin_date %>
          <%= f.text_field :begin_date, id: 'date1', class: "form-control" %>


          <%= f.label :employee_id %><br />
          <%= f.collection_select(:employee_id, current_user.employees, :id, :name, {}, {:class => "form-control"} ) %>
          <br>
          
          <%= f.label :shift_id %><br />
          <%= f.collection_select(:shift_id, current_user.shifts, :id, :fullshift, {}, {:class => "form-control"}) %>
          <br>


         
          <%= f.submit "Save changes", class: "btn btn-primary" %>
        <% end %>
      </div>
      </div>