
<tr>
    <td><%= roster.begin_date %></td>
    <td><%= roster.employee.name %></td>
    <td><%= roster.shift.start_time %></td>
    <td><%= roster.shift.finish_time %></td>
    <td><% if current_user?(roster.user) %>
       <%= link_to '<span style="color: #DC003B;" class="glyphicon glyphicon-remove" aria-hidden="true"></span> DELETE'.
          html_safe, roster, method: :delete,
                                           data: { confirm: "You sure?" } %>
        <% end %></td>
    <td><% if current_user?(roster.user) %>
      <%= link_to('<span style="color: #6501FF;" class="glyphicon glyphicon-pencil" aria-hidden="true"></span> EDIT'.html_safe,
      edit_roster_path(roster.id)) %>

        <% end %></td>
  </tr>