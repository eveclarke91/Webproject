<% provide(:title, 'Add Employee') %>
    <h1>Add a new Employee</h1>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(Employee.new) do |f| %>
        
          <%= f.label :name %>
          <%= f.text_field :name %>

          <%= f.label :address %>
          <%= f.email_field :address %>

          <%= f.label :Phone %>
          <%= f.text_field :number %>

          <%= f.label :rate_of_pay %>
          <%= f.text_field :rate_of_pay %>


          <%= f.submit "Create Employee", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>